{% extends '../layout.html.twig' %}
{% block content %}
<ul class="breadcrumb">
  <li><a href="{{ path('/') }}">{{ 'Homepage' | trans }}</a> <span class="divider">/</span></li>
  {% if object %}
  {% for p in object.hierarchyList %}
  <li><a href="{{ concat('/handle/', p.handle) | path }}">{{ p.name }}</a> <span class="divider">/</span></li>
  {% endfor %}
  <li><a href="{{ concat('/handle/', object.handle) | path }}">{{ object.name }}</a> <span class="divider">/</span></li>
  {% endif %}
  <li class="active">{{ 'Search results' | trans }}</li>
</ul>


<div class="row-fluid">
	<div class="span9">
		
		<div class="well remove-bottom-padding">
			<form class="search" method="POST" action="{{ path '/search' }}">
				{% if object %}
				<input type="hidden" name="handle" value="{{ object.handle }}" />
				{% endif %}
				<div class="input-append">
				  <input name="query" class="size input-xxlarge" placeholder="{{ 'Type some text to search...' | trans }}" id="appendedInputButtons" type="text" value="{{ request.parameter('query') }}" />
				  <button class="btn btn-large">{{ 'Search' | trans }}</button>
				</div>
			</form>
		</div>
		<ul class="nav nav-tabs" id="myTab">
			{% set shown = false %}
			{% set itemsShow = '' %}
			{% set communitiesShow = '' %}
			{% set collectionsShow = '' %}
  			{% if items.getTotalSearchResults > 0 %}
  			{% set shown = true %}
  			<li class="active">
  				{% set itemsShow = 'active' %}
  				<a data-toggle="tab" href="#items">
  				{{ 'Items' | trans }} 
  				{% if items.getTotalSearchResults > 0 %}
  				<span class="badge badge-info">{{ items.getTotalSearchResults }}</span>
  				{% endif %}
  				</a>
  			</li>
  			{% else %}
  			<li class="disabled">
  				<a href="#items" title="{{ 'No items found' | trans }}">
  				{{ 'Items' | trans }}
  				</a>
  			</li>
  			{% endif %}
  			{% if communities.getTotalSearchResults > 0 %}
  			{% if shown %}
  			<li>
  			{% else %}
  			<li class="active">
  			{% set shown = true %}
  			{% set communitiesShow = 'active' %}
  			{% endif %}
  				<a data-toggle="tab" href="#communities">
  				{{ 'Communities' | trans }}
  				<span class="badge badge-info">{{ communities.getTotalSearchResults }}
  				</a>
  			</li>
  			{% else %}
  			<li class="disabled">
  				<a href="#communities" title="{{ 'No communities found' | trans }}">
  				{{ 'Communities' | trans }}
  				</a>
  			</li>
  			{% endif %}
  			{% if collections.getTotalSearchResults > 0 %}
  			{% if shown %}
  			<li>
  			{% else %}
  			<li class="active">
  			{% set shown = true %}
  			{% set collectionsShow = 'active' %}
  			{% endif %}
  				<a data-toggle="tab" href="#collections">
  				{{ 'Collections' | trans }} 
  				<span class="badge badge-info">{{ collections.getTotalSearchResults }}
  				</a>
  			</li>
  			{% else %}
  			<li class="disabled">
  				<a href="#collections" title="{{ 'No collections found' | trans }}">
  				{{ 'Collections' | trans }} 
  				</a>
  			</li>
  			{% endif %}
		</ul>
		<div id="tab" class="tab-content">
  			<div class="tab-pane {{ itemsShow }}" id="items">
  				{% for item in items.dspaceObjects %}
  				<div>
					<a href="{{ concat('/handle/', item.handle) | path}}">
					<strong>{{ item.firstMetadata('dc.title').textValue }}</strong>
					{% for md in item.metadata('dc.contributor.author') %}
					{% if last %}
					<small>{{ md.textValue }}</small>
					{% else %}
					<small>{{ md.textValue }}</small>;
					{% endif %}
					{% endfor %}
					</a>
				</div>
  				{% endfor %}
  			</div>
  			<div class="tab-pane {{ communitiesShow }}" id="communities">
  				{% for item in communities.dspaceObjects %}
  				<div>
					<a href="{{ concat('/handle/', item.handle) | path}}">
					<strong>{{ item.name }}</strong>
					</a>
				</div>
  				{% endfor %}
  			</div>
  			<div class="tab-pane {{ collectionsShow }}" id="collections">
  				{% for item in collections.dspaceObjects %}
  				<div>
					<a href="{{ concat('/handle/', item.handle) | path}}">
					<strong>{{ item.name }}</strong>
					</a>
				</div>
  				{% endfor %}
  			</div>
		</div>
	</div>
	<div class="span3">
	
	<form method="POST" action="{{ path '/search' }}">
  	<fieldset>
	    <legend>Filter your search</legend>
	    <blockquote><label><strong>Author</strong></label>
	    {% for author in items.getFacetResult('author') %}
	    <label class="checkbox">
	      <input type="checkbox" name="author" value="{{ author.getDisplayedValue }}">{{ author.getDisplayedValue }} ({{ author.count }})</input>
	    </label>
	    {% endfor %}
	   
	 
	 </blockquote>
	    <blockquote><label><strong>Date</strong></label>
	   	
	   	{% for dt in items.getFacetResult('dateIssued') %}
		    <label class="checkbox">
		      <input type="checkbox" name="date" value="{{ dt.getDisplayedValue }}">{{ dt.getDisplayedValue }} ({{ dt.count }})</input>
		    </label>
	    {% endfor %}
	    
	    </blockquote>
	    <div class="controls">
		    <div class="input-prepend">
		    	<button class="btn" type="button"><i class="icon-search"></i></button>
		     	<input id="queryFilter" name="query" type="text" value="{{ request.parameter('query') }}">
		    </div>
		</div>
	</fieldset>
	</form>

	
	
	</div>
</div>
{% endblock %}