{% extends '../layout.html.twig' %}
{% block content %}
<ul class="breadcrumb">
  <li><a href="{{ path('/') }}">{{ 'Homepage' | trans }}</a> <span class="divider">/</span></li>
  {% if object %}
  {% for p in object.hierarchyList %}
  <li><a href="{{ concat('/handle/', p.handle) | path }}">{{ p.name }}</a> <span class="divider">/</span></li>
  {% endfor %}
  <li><a href="{{ concat('/handle/', object.handle) | path }}">{{ object.name }}</a> <span class="divider">/</span></li>
  {% endif %}
  <li class="active">{{ 'Search results' | trans }}</li>
</ul>
<div class="row-fluid">
	<div class="span9">
		<div class="well remove-bottom-padding">
			<form class="search" method="POST" action="{{ path '/search' }}">
				{% if object %}
				<input type="hidden" name="handle" value="{{ object.handle }}" />
				{% endif %}
				<div class="input-append">
				  <input name="query" class="size input-xxlarge" placeholder="{{ 'Type some text to search...' | trans }}" id="appendedInputButtons" type="text" value="{{ request.parameter('query') }}" />
				  <button class="btn btn-large">{{ 'Search' | trans }}</button>
				</div>
			</form>
		</div>
		<hr />
		<div>
			{{ 'No results' | trans }}
		</div>
	</div>
	<div class="span2">
	teste
	</div>
</div>
{% endblock %}