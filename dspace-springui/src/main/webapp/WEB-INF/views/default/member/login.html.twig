{% extends '../layout.html.twig' %}
{% block styles %}
<link href="{{ asset('css/login.css') }}" rel="stylesheet" type="text/css">
{% endblock %}
{% block content %}
<div class="account-container">
	
	<div class="content clearfix">
		
		<form method="POST" action="{{ path('/j_spring_security_check') }}" class="login-form">
		
			<h1>{{ 'Sign In' | trans }}</h1>	
			
			{% if error %}
			<hr />
			
			<div class="alert alert-danger">
				{{ error | trans }}
			</div>
			{% endif %}
			<hr />
			
			<div class="control-group">
				<div class="input-prepend">
				  <span class="add-on"><img src="{{ asset('img/glyphicons/png/glyphicons_003_user.png') }}" /></span>
				  <input name="j_username" tabindex="1" type="text" placeholder="{{ 'Username' | trans }}" />
				</div>
			</div>
			<div class="control-group">
				<div class="input-prepend">
				  <span class="add-on"><img src="{{ asset('img/glyphicons/png/glyphicons_044_keys.png') }}" /></span>
				  <input name="j_password" tabindex="2" type="password" placeholder="{{ 'Password' | trans }}" />
				</div>
			</div>
			
			<div class="login-actions">
				
				<span class="login-checkbox">
					<input id="Field" name="j_rememberme" type="checkbox" class="field login-checkbox" value="yes" tabindex="4" />
					<label class="choice" for="Field">{{ 'Keep me signed in' | trans }}</label>
				</span>
									
				<button tabindex="3" class="button btn btn-primary btn-large">{{ 'Sign In' | trans }}</button>
				
			</div> <!-- .actions -->
			
		</form>
		
	</div> <!-- /content -->
	
</div> <!-- /account-container -->
{% endblock %}