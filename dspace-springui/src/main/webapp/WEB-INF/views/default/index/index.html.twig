{% extends '../layout.html.twig' %}
{% block content %}
<div class="image-head" src="{{ asset 'img/books.jpg' }}"></div>
<div class="well remove-bottom-padding">
	<form class="search" action="{{ path '/search' }}">
		<div class="input-append">
		  <input name="query" class="span9" placeholder="{{ 'Type some text to search...' | trans }}" id="appendedInputButtons" type="text">
		  <button class="btn btn-large" type="button">{{ 'Search' | trans }}</button>
		</div>
	</form>
</div>
<hr />
<h2>{{ 'Communities' | trans }}</h2>
<div class="communities">
	{% call CommunityRelated getCommunityList %}
	{% for community in communities %}
	{% if (position % 4) == 0 %}
	<div class="row-fluid">
	{% endif %}
		<a href="{{ concat ('/handle/', community.handle ) | path }}" class="community span3">
			<p class="title">{{ community.name }}</p>
			{% if community.logo %}
			<p class="logo">
				<img src="{{ concat('/logo/', community.logo.id ) | path }}" />
			</p>
			{% endif %}
			{% if community.shortDescription %}
			<p class="description">{{ community.shortDescription }}</p>
			{% endif %}
		</a>
	{% if ((position % 4) == 3) || last %}
	</div>
	{% endif %}
	{% endfor %}
</div>
{% endblock %}