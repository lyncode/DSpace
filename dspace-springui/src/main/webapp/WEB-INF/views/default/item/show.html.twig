{% extends '../layout.html.twig' %}
{% block content %}
<ul class="breadcrumb">
  <li><a href="{{ path('/') }}">{{ 'Homepage' | trans }}</a> <span class="divider">/</span></li>
 
  {% for p in item.owningCollection.hierarchyList %}
  	<li><a href="{{ concat('/handle/', p.handle) | path }}">{{ p.name }}</a> <span class="divider">/</span></li>
  {% endfor %}
  <li><a href="{{ concat('/handle/', item.owningCollection.handle) | path }}">{{ item.owningCollection.name }}</a> <span class="divider">/</span></li>
  <li class="active">{{ item.getFirstMetadata('dc.title') }}</li>
</ul>
<div class="row-fluid">
	<div>
		<h1>{{ item.getFirstMetadata('dc.title') }}</h1>
		<small>{{ item.getFirstMetadata('dc.contributor.author') }}</small>
		<hr />
	</div>
	<div>
		<div class="row-fluid">
			<div class="span6">
				<div class="row-fluid">
          			<div class="span6"><h4><strong>{{ 'Other Titles' | trans }}:</strong></h4></div>
          			<div class="span6"><h4>{{ item.getFirstMetadata('dc.title.alternative') }}</h4></div>
        	 	</div>
				<div class="row-fluid">
          			<div class="span6"><h4><strong>{{ 'Issue Date' | trans }}:</strong></h4></div>
          			<div class="span6"><h4>{{ item.getFirstMetadata('dc.date.issued') }}</h4></div>
        	 	</div>
        	 	<div class="row-fluid">
          			<div class="span6"><h4><strong>{{ 'Abstract' | trans }}:</strong></h4></div>
          			<div class="span6"><h4>{{ item.getFirstMetadata('dc.description.abstract') }}</h4></div>
        	 	</div>
        	 	<div class="row-fluid">
          			<div class="span6"><h4><strong>{{ 'Appears in Collections' | trans }}:</strong></h4></div>
          			{% for col in item.getcollections %}
          				<div class="span6"><h4>{{ col.name }}</h4></div>
          			{% endfor %}
          			
        	 	</div>
			</div>
			<div class="span6">
				
        	 	<div class="row-fluid">
          			<div class="span6"><h4><strong>{{ 'Keywords' | trans }}:</strong></h4></div>
          			<div class="span6"><h4>{{ item.getFirstMetadata('dc.subject') }}</h4></div>
        	 	</div>
        	 	<div class="row-fluid">
          			<div class="span6"><h4><strong>{{ 'Report Series No.' | trans }}:</strong></h4></div>
          			<div class="span6"><h4>{{ item.getFirstMetadata('dc.relation.ispartofseries') }}</h4></div>
        	 	</div>
        	 	<div class="row-fluid">
          			<div class="span6"><h4><strong>{{ 'Description' | trans }}:</strong></h4></div>
          			<div class="span6"><h4>{{ item.getFirstMetadata('dc.description') }}</h4></div>
        	 	</div>
        	 	<div class="row-fluid">
          			<div class="span6"><h4><strong>{{ 'URI' | trans }}:</strong></h4></div>
          			<div class="span6"><h4><button class="btn btn-link">{{ item.getFirstMetadata('dc.identifier.uri') }}	</button></h4></div>
        	 	</div>
			</div>
		</div>
		<hr />
		
		<h2>{{ 'Files' | trans }}</h2>
		{% for bund in item.getbundles %}
			{% if bund.getname == 'ORIGINAL' %}
				{% for bit in bund.getbitstreams %}
					<a  class="item span3" href='#'>
						<p class="title">{{ bit.name }}</p>
						<p class="muted"><strong>{{'Size' | trans}}{{': '}}</strong>{{ bit.size }}{{ ' Kb' }}</p>
						{% if bit.format.shortDescription == 'Adobe PDF' %}
							<button"><i class="cus-page-white-acrobat"></i> {{ bit.format.shortDescription }}</button>
						{% endif %}
						{% if bit.format.shortDescription == 'Microsoft Word' %}
							<button"><i class="cus-report-word"></i> {{ bit.format.shortDescription }}</button>
						{% endif %}
						{% if bit.format.shortDescription == 'Microsoft Excel' %}
							<button"><i class="cus-page-excel"></i> {{ bit.format.shortDescription }}</button>
						{% endif %}
						{% if bit.format.shortDescription == 'Microsoft Powerpoint' %}
							<button"><i class="cus-page-white-powerpoint"></i> {{ bit.format.shortDescription }}</button>
						{% endif %}
						{% if bit.format.shortDescription == 'JPEG' %}
							<button"><i class="cus-images"></i> {{ bit.format.shortDescription }}</button>
						{% endif %}
						{% if bit.format.shortDescription == 'GIF' %}
							<button"><i class="cus-images"></i> {{ bit.format.shortDescription }}</button>
						{% endif %}
						{% if bit.format.shortDescription == 'image/png' %}
							<button"><i class="cus-images"></i> {{ bit.format.shortDescription }}</button>
						{% endif %}
					</a>
			{% endfor %}
			{% endif %}
 		{% endfor %}
			
	</div>
{% endblock %}