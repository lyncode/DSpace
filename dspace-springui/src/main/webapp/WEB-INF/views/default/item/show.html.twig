{% extends '../layout.html.twig' %}
{% block content %}
<ul class="breadcrumb">
  <li><a href="{{ path('/') }}">{{ 'Homepage' | trans }}</a> <span class="divider">/</span></li>

  <li class="active">{{ item.getFirstMetadata('dc.title') }}</li>
</ul>
<div class="row">
	<div class="span9">
		<h1>{{ item.getFirstMetadata('dc.title') }}</h1>
		<small>{{ item..getFirstMetadata('dc.description.abstract') }}</small>
		<hr />
		<div class="well remove-bottom-padding">
			<form class="search" method="POST" action="{{ path '/search' }}">
				<input type="hidden" name="collection" value="{{ item.handle }}" />
				<div class="input-append">
				  <input class="span6" placeholder="{{ 'Type some text to search...' | trans }}" id="appendedInputButtons" type="text">
				  <button class="btn btn-large">{{ 'Search' | trans }}</button>
				</div>
			</form>
		</div>
	</div>
	
{% endblock %}