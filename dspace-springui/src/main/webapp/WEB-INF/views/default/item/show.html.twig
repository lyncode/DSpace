{% extends '../layout.html.twig' %}
{% block content %}
<ul class="breadcrumb">
  <li><a href="{{ path('/') }}">{{ 'Homepage' | trans }}</a> <span class="divider">/</span></li>
 
  {% for p in item.owningCollection.hierarchyList %}
  	<li><a href="{{ concat('/handle/', p.handle) | path }}">{{ p.name }}</a> <span class="divider">/</span></li>
  {% endfor %}
  <li><a href="{{ concat('/handle/', item.owningCollection.handle) | path }}">{{ item.owningCollection.name }}</a> <span class="divider">/</span></li>
  <li class="active">{{ item.getFirstMetadata('dc.title') }}</li>
</ul>
<div class="row">
	<div class="span9">
		<h1>{{ item.getFirstMetadata('dc.title') }}</h1>
		<small>{{ item..getFirstMetadata('dc.description.abstract') }}</small>
		<hr />
	</div>
	
{% endblock %}